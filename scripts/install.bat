@echo off
:: BatchGotAdmin
:-------------------------------------
REM  --> Check for permissions
>nul 2>&1 "%SYSTEMROOT%\system32\cacls.exe" "%SYSTEMROOT%\system32\config\system"

REM --> If error flag set, we do not have admin.
if '%errorlevel%' NEQ '0' (
    echo Requesting administrative privileges...
    goto UACPrompt
) else ( goto gotAdmin )

:UACPrompt
    echo Set UAC = CreateObject^("Shell.Application"^) > "%temp%\getadmin.vbs"
    echo UAC.ShellExecute "%~s0", "", "", "runas", 1 >> "%temp%\getadmin.vbs"

    "%temp%\getadmin.vbs"
    del "%temp%\getadmin.vbs"
    exit /B

:gotAdmin
    if exist "%temp%\getadmin.vbs" ( del "%temp%\getadmin.vbs" )
    pushd "%CD%"
    CD /D "%~dp0"
:--------------------------------------

echo ====================================================================
echo Softland Updater Agent Installer
echo ====================================================================
echo.
echo This script will install the agent as a Windows service.
echo.
powershell.exe -NoProfile -ExecutionPolicy Bypass -Command "& {Set-ExecutionPolicy Unrestricted -Force; & '.\install-service.ps1';}"
echo.
echo ====================================================================
echo Installation process finished. You can close this window.
echo ====================================================================
echo.
pause
